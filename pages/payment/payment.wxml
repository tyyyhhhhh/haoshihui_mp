<!--pages/payment/payment.wxml-->
<view class="topnav">
  <view class="active" href="#home">{{shop.address}}</view>
  <view class="customer-info">
    <!-- <view >customer's name</view> -->
    <view>{{customerEmail}}</view>
  </view>
</view>

<view class="payment-summary">
  <view class="shop-name h2">{{shop.name}}</view>

  <view class="order-card"> 
    <view class="item-left">
      <view class="item-image" style="background-image: url('{{item.image_url}}');">test</view>
      <view class="item-name">{{pickedItem.name}}</view>
    </view>
      
      <view class="item-price">$$$ {{pickedItem.original_price}} 
    
    </view>
  </view>

</view>

<view class="submit-tab">
  <image src="/images/shop-cart.png" class="icon" bindtap="addToCart" />
  
</view>

