/* Banner */
.banner {
  color: white;
  text-align: center;
  height: 100vh;
  /* if you have a 70px navbar => height: calc(100vh - 70px); */
  background-size: cover !important;
  display: flex;
  align-items: center;
  justify-content: center;
}
.banner .h1 {
  font-size: 50px;
  font-weight: bold;
  text-shadow: 0px 1px rgba(0, 0, 0, 0.2);
}
.banner .tag {
  font-size: 25px;
  font-weight: lighter;
  color: rgb(255, 255, 255);
  opacity: 0.6;
  margin-bottom: 30px;
}

button {
  width: 60%;
  font-weight: 700;
  letter-spacing: 1px;
  text-transform: uppercase;
  border: 2px solid #0099cc;
	color: #0099cc;
  background: none;
}


.choose-options {
  display: flex;
}

.shop-admin {
  background-color: lightgrey;
}

.customer {
 background-color: grey;
}

button.button-location {
  background-image: linear-gradient(-180deg, #FF931E 23%, #F87821 67%,      #F15A24 100%);
}