<!--pages/shop/shop.wxml-->
<view class="shop-banner">
  <view class="banner" style="background-image: linear-gradient(rgba(80,80,80,0.2), rgba(20,20,20,0.7)), url('{{avatar_url}}');">
    <view class="banner-info"> 
      <view class="title">{{name}}</view>
      <view class="subtitle">{{description}}</view>
      
      <view class="subtitle">{{address}}</view>
<view class="title" bindtap='listenerBtnCall'>call {{phone_number}}</view>
    </view>
  </view>
</view>

<view wx:for="{{items}}" wx:for-item="item" wx:key="item.id"  bindtap="selectItem" data-item="{{item}}" class="order-card">

    <view class="item-image" style="background-image: url('{{item.image_url}}');"></view>
   
    <view class="right-side">
      <view class="item-name">{{item.name}}</view>
      <text class="paraph">{{item.description}}</text>
      <view class="item-price">Â¥ {{item.original_price}}</view>
      <image src="/images/plus-button.svg" class="add-button" bindtap="addToCart"

          data-id="{{id}}" />
      </view>
  </view>



<view class="submit-tab">
  <image src="/images/shop-cart.png" class="icon" bindtap="addToCart" />
</view>
