<!--pages/shop/shop.wxml-->
<view class="shop-banner">
  <view class="banner-image"></view>
  <view class="banner-info"> 
    <view>{{name}}</view>
    <view>{{description}}</view>
  </view>
</view>


<view wx:for="{{items}}" wx:for-item="item" wx:key="item.id" class="order-cards">
  <view class="order-card">

    <view class="item-image">image here</view>

    <view class="item-info">
      <view class="item-name">{{item.name}}</view>

      <view class="item-price-qty-box">
        <view class="item-price">8 RMB</view>

        <view class="qty-box">
          <button class="add">-</button>
          <view class="item-qty">2</view>
          <button class="add" size="{{miniSize}}">+</button>
        </view>

      </view>

    </view>
  </view>
</view> 

