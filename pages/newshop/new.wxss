/* pages/newshop/new.wxss */
.banner {
  color: white;
  height: 100vh;
  /* if you have a 70px navbar => height: calc(100vh - 70px); */
  background-size: cover !important;
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: 20% 80%; 

}


.h2-header {
 color: white;
  font-size: 50rpx; 
  font-weight: bold;
  padding: 10px;
}

button {
  width: 60%;
  font-weight: 700;
  letter-spacing: 1px;
  text-transform: uppercase;
  border: 2px solid #0099cc;
	color: #0099cc;
  background: none;
}

textarea {
  padding: 10rpx 0;
  font-size: 35rpx;
  width: 100%;
}
.text-area-wrap {
  padding: 15rpx 15rpx;
  background-color: #fff;
  opacity: 0.5;
  margin-top:8px;
  border-radius: 2px;
  border-left: 5px solid #9F9F9C;
  margin-bottom: 8px;
  width: 80vw;
}
