<!--pages/shops/shops.wxml-->
<view class="topnav">
  <view class="active" href="#home">user's address</view>
  <input type="text" placeholder="Search food"></input>
</view>

<view class="body">



<view wx:for="{{shops}}" 
wx:for-item="shop"
wx:key="shop.id" 
class="shop-card" 
bindtap="showShop" 
data-shop-id="{{shop.id}}"> 

  <view class="shop-card-diff">
    <view class="shop-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('{{shop.avatar_url}}')">
    </view>
    <view class="shop-info">
    <view class="shop-name h2">{{shop.name}}</view>
      <view class="info-left">
        
        <view class="h4">Open: {{shop.opening_hours}}</view>
        <view class="h4">Description: {{shop.description}}</view>
        <view class="h4">Rating: {{shop.rating_from_dianping}}</view>
      </view>
    </view>
  </view>
</view>

</view>
