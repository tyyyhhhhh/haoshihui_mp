<!--pages/shops/shops.wxml-->
<view class="nav-bar">
  <view>location</view>
</view>


<view wx:for="{{shops}}" 
wx:for-item="shop"
wx:key="shop.id" 
class="shop-cards" 
data-shop="{{shop}}"
bindtap="showShop" 
 > 

  <view class="shop-card" bindtap="showShop">
    <view class="shop-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('{{shop.avatar_url}}')">
    
    </view>
    <view class="shop-info">
      <view class="info-left">
        <view>{{shop.name}}</view>
        <view>{{shop.opening_hours}}</view>
      </view>
      <view>8 RMB</view>
    </view>
  </view>
</view>

